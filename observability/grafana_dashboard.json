{
    "annotations": {
        "list": []
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 0,
    "id": null,
    "links": [],
    "liveNow": false,
    "panels": [
        {
            "title": "Request Rate",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "expr": "rate(hndsr_requests_total[5m])",
                    "legendFormat": "{{method}} {{endpoint}} {{status}}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "reqps"
                }
            }
        },
        {
            "title": "Error Rate (%)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 0
            },
            "targets": [
                {
                    "expr": "rate(hndsr_errors_total[5m])",
                    "legendFormat": "{{error_type}}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short"
                }
            }
        },
        {
            "title": "Inference Latency (P50 / P95 / P99)",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 8
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.50, rate(hndsr_inference_seconds_bucket[5m]))",
                    "legendFormat": "P50",
                    "refId": "A"
                },
                {
                    "expr": "histogram_quantile(0.95, rate(hndsr_inference_seconds_bucket[5m]))",
                    "legendFormat": "P95",
                    "refId": "B"
                },
                {
                    "expr": "histogram_quantile(0.99, rate(hndsr_inference_seconds_bucket[5m]))",
                    "legendFormat": "P99",
                    "refId": "C"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s"
                }
            }
        },
        {
            "title": "GPU Memory Usage",
            "type": "gauge",
            "gridPos": {
                "h": 8,
                "w": 6,
                "x": 12,
                "y": 8
            },
            "targets": [
                {
                    "expr": "hndsr_gpu_memory_used_bytes / (1024*1024*1024)",
                    "legendFormat": "GPU Memory (GB)",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "decgbytes",
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 10
                            },
                            {
                                "color": "red",
                                "value": 14
                            }
                        ]
                    },
                    "max": 16
                }
            }
        },
        {
            "title": "Active Requests",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 18,
                "y": 8
            },
            "targets": [
                {
                    "expr": "hndsr_active_requests",
                    "legendFormat": "Active",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "thresholds": {
                        "steps": [
                            {
                                "color": "green",
                                "value": null
                            },
                            {
                                "color": "yellow",
                                "value": 10
                            },
                            {
                                "color": "red",
                                "value": 18
                            }
                        ]
                    },
                    "max": 20
                }
            }
        },
        {
            "title": "Uptime",
            "type": "stat",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 18,
                "y": 12
            },
            "targets": [
                {
                    "expr": "hndsr_uptime_seconds",
                    "legendFormat": "Uptime",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s"
                }
            }
        },
        {
            "title": "Rate Limiting & Backpressure",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 24,
                "x": 0,
                "y": 16
            },
            "targets": [
                {
                    "expr": "rate(hndsr_rate_limited_total[5m])",
                    "legendFormat": "Rate Limited",
                    "refId": "A"
                },
                {
                    "expr": "rate(hndsr_backpressure_rejected_total[5m])",
                    "legendFormat": "Backpressure Rejected",
                    "refId": "B"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "reqps"
                }
            }
        }
    ],
